<?xml version="1.0" encoding="UTF-8"?>
<suite parallel="false" name="Suite">
	<test name="Run on Chrome">
		<!-- đoạn thẻ group để chạy những testcase trong 1 group có name = "pay"-->
		<groups>
			<run>
				<include name = "user" />
			</run>
		</groups>
		<!-- đoạn thẻ classes để chạy những tất cả testcases trong 1 class của 1 package-->
		<classes>
			<class name="groupTest.payment" /> <!-- packageName.className-->
			<class name="groupTest.user" />
			<class name="assertions.Assertions" />
		</classes>
	</test>
</suite>
